.page {
    background: #325A7E;
}

.square-image-container {
    position: absolute;
    top: 310px;
    left: 120px;
    z-index: 3;
    width: 280px;
    height: 280px;
}

.square-image-container__image {
    width: 260px;
    height: 260px;
}

.address-background {
    width: 100%;
    height: 200px;
    position: absolute;
    top: 340px;
    left: 0;
    z-index: 2;
    background: #323230;
}

.address-text {
    width: 590px;
    height: 130px;
    position: absolute;
    top: 365px;
    left: 440px;
    z-index: 3;
    padding: 20px 0 0 0;
    background: transparent;
}

.address-text__line1 {
    font-family: 'Roboto', arial;
    font-weight: 700;
    color: #FFF;
    font-size: 36px;
    text-transform: uppercase;
    margin-bottom: 15px;
}

.address-text__line2 {
    margin-bottom: 5px;
}

.address-text__line2,
.address-text__line3 {
    font-family: 'Roboto', arial;
    font-weight: 100;
    color: #FFF;
    font-size: 18px;
    text-transform: uppercase;
}

.position-text {
    width: 800px;
    height: 130px;
    position: absolute;
    top: 1120px;
    right: 120px;
    z-index: 3;
    padding: 15px 0;
    background: transparent;
}

.position-text__line1 {
    font-family: 'Roboto', arial;
    font-weight: 600;
    color: #FFF;
    font-size: 80px;
    text-transform: uppercase;
    margin-bottom: 10px;
    text-align: right;
}

.position-text__line2 {
    font-family: 'Roboto', arial;
    font-weight: 100;
    color: #FFF;
    font-size: 40px;
    text-transform: uppercase;
    text-align: right;
}