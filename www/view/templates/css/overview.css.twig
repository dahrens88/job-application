.container {
    display: flex;
}

iframe {
    width: 1032px;
    height: 1460px;
    border: 1px solid #DDD;
}

nav ul.parent-menu {
    width: 400px;
    border-top: 1px solid #DDD;
}

nav ul.sub-menu {
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #DDD;
}

nav ul.sub-menu li {
    width: 50%;
    height: 50px;
}

nav ul.sub-menu li {
    border-right: 1px solid #DDD;
}

nav ul.sub-menu li a {
    display: block;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
}

nav ul.sub-menu li a:hover {
    background: #CCC;
}